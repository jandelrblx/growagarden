-- Test script to verify Unicode escape sequences work correctly
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local player = Players.LocalPlayer

-- Test GUI
local testGui = Instance.new("ScreenGui", CoreGui)
testGui.Name = "EmojiTest"
testGui.ResetOnSpawn = false

local frame = Instance.new("Frame", testGui)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Emoji Test - Unicode Escape Sequences"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.FredokaOne
title.TextSize = 16
title.BackgroundTransparency = 1
title.TextXAlignment = Enum.TextXAlignment.Center

-- Test different emoji representations
local testLabel = Instance.new("TextLabel", frame)
testLabel.Size = UDim2.new(1, -20, 1, -40)
testLabel.Position = UDim2.new(0, 10, 0, 35)
testLabel.Text = "Direct emoji: üé≤ üëÅÔ∏è üéâ\n\nUnicode escape: \240\159\142\178 \240\159\145\129 \240\159\142\137\n\nBoth should look identical!"
testLabel.TextWrapped = true
testLabel.Font = Enum.Font.FredokaOne
testLabel.TextSize = 14
testLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
testLabel.BackgroundTransparency = 1
testLabel.TextXAlignment = Enum.TextXAlignment.Left
testLabel.TextYAlignment = Enum.TextYAlignment.Top

print("Emoji test created! Check the GUI to see if Unicode escape sequences work correctly.") 
